{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "src/*": [
        "./*"
      ]
    },
    "incremental": true
  },
  "include": [
    "*/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
